<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerBanner"
        layout="@layout/header_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitleQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="แบบทดสอบ"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#001A66"
        app:layout_constraintTop_toBottomOf="@id/headerBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/panelCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleQuiz"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBasic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_blue_outline"
            android:backgroundTint="@null"
            android:text="พื้นฐาน Computer Engineering"
            android:textColor="#001A66"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMajor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_blue_outline"
            android:backgroundTint="@null"
            android:text="เลือกวิชาเอก"
            android:textColor="#001A66"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOthers"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_blue_outline"
            android:backgroundTint="@null"
            android:text="สาขาอื่น ๆ"
            android:textColor="#001A66"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:background="@drawable/btn_blue_solid"
            android:backgroundTint="@null"
            android:text="เริ่มทำแบบทดสอบ"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTitleQuiz"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="คำถาม"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rgChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/choice1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ตัวเลือก 1"/>
            <RadioButton android:id="@+id/choice2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ตัวเลือก 2"/>
            <RadioButton android:id="@+id/choice3" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ตัวเลือก 3"/>
            <RadioButton android:id="@+id/choice4" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ตัวเลือก 4"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ย้อนกลับ"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ถัดไป"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="#001A66"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
