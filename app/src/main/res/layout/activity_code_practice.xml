<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <include
        android:id="@+id/headerBanner"
        layout="@layout/header_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="code solving game"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textColor="#111827"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/tvMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฝึก"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คะแนน: 0/0"
                android:textColor="#111827"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:strokeColor="#CBD5E1"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSpec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="สเปคโจทย์"
                        android:textColor="#111827"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/tvTemplateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Code Template"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etCode"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="#3F3F46"
                        android:textColor="#F8FAFC"
                        android:textColorHint="#CBD5E1"
                        android:padding="10dp"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:hint="พิมพ์โค้ดที่นี่"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRun"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="run"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/tvOutputLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Output"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etOutput"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#3F3F46"
                        android:textColor="#F8FAFC"
                        android:padding="10dp"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:focusable="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReveal"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="เฉลยตัวอย่าง"
                            android:textAllCaps="false"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNext"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ข้อถัดไป"
                            android:textAllCaps="false"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:strokeColor="#CBD5E1"
                app:strokeWidth="1dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Summary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
